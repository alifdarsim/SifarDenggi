<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/white"
                    android:text="Kes kematian disebabkan denggi" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/skull"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="8dp"
                                android:id="@+id/death"
                                android:text="-"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp"
                                android:text="orang"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="12dp"
                            android:id="@+id/deathdaripada"
                            android:text="Kes dari Januari 2021"/>
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/white"
                    android:text="Statistik Denggi Negara" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="10"
                        android:background="@color/grey">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:id="@+id/state_header"
                            android:textColor="@color/white"
                            android:text=""/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/graph"
                            android:textSize="12sp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:id="@+id/daily_header"
                            android:textColor="@color/white"
                            android:text=""/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/graph"
                            android:gravity="center"
                            android:layout_weight="4"
                            android:textSize="12sp"
                            android:id="@+id/cumulative_header"
                            android:textColor="@color/white"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:text=""/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycleView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:orientation="vertical"
                            android:id="@+id/progress_circular">
                            <ProgressBar
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="120dp"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="Memuat data..."
                                />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="9"
                        android:padding="12dp"
                        android:background="@color/grey"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:textStyle="bold"
                            android:id="@+id/state_footer"
                            android:textColor="@color/white"
                            android:text=""/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/graph"
                            android:textSize="12sp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/daily_footer"
                            android:textColor="@color/white"
                            android:text=""/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/graph"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:id="@+id/cumulative_footer"
                            android:textColor="@color/white"
                            android:text=""/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="Sumber: Daripada Bilik Gerakan Denggi Kebangsaan CPRC
Kementerian Kesihatan Malaysia (KKM)"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>